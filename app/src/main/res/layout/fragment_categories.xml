<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kryptoblocks.commercex.fragmentss.CategoriesFragment">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/categories_men_fashion_card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
            android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/men_fashion"
            android:adjustViewBounds="true"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/categories_women_fashion_card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/women_fashion"
            android:adjustViewBounds="true"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/categories_kids_fashion_card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kids_fashion"
            android:adjustViewBounds="true"/>
    </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
</FrameLayout>
